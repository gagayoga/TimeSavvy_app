<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp">
        <shape>
            <solid android:color="#55000000" /> <!-- Semi-transparent black for shadow -->
            <corners android:radius="15dp" />
        </shape>
    </item>


    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#F5F5F5"
                android:endColor="#f5f5f5"
                android:type="linear" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
</layer-list>