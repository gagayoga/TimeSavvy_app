<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.main.MainActivity">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/avatar"
            android:src="@drawable/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/txtUsername"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="Hallo username"
            android:layout_toEndOf="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line"
        android:layout_below="@id/toolbar"
        android:background="@color/gray_100"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/text_view_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/extrabold"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <RelativeLayout
        android:id="@+id/cardSiswa"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/text_view_date_time"
        android:background="@drawable/gradient_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iconStudents"
            android:padding="20dp"
            android:src="@drawable/icon_students"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="Data Siswa"
            android:layout_toEndOf="@+id/iconStudents"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cardJadwal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/cardSiswa"
        android:background="@drawable/gradient_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iconJadwal"
            android:padding="20dp"
            android:src="@drawable/icon_jadwal"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="Jadwal Piket Kelas"
            android:layout_toEndOf="@+id/iconJadwal"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cardLogout"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iconLogout"
            android:padding="10dp"
            android:src="@drawable/icon_logout"
            android:layout_width="55dp"
            android:layout_height="55dp"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="Keluar Akun"
            android:layout_toEndOf="@+id/iconLogout"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>
    </RelativeLayout>

</RelativeLayout>