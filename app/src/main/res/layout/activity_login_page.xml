<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    android:padding="20dp"
    tools:context=".autentikasi.Login.LoginPage">

    <TextView
        android:letterSpacing="-0.02"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/extrabold"
        android:text="Masuk Aplikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="40dp"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/medium"
        android:text="Alamat Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        android:id="@+id/layout_email"
        android:hint="timesavvy@smk.belajar.id">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:ems="10"
            android:id="@+id/txtEmail"
            android:inputType="text"
            android:fontFamily="@font/semibold"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:fontFamily="@font/medium"
        android:text="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        android:id="@+id/layout_password"
        app:errorEnabled="true"
        app:boxStrokeErrorColor="@color/primary"
        app:errorTextColor="@color/primary"
        android:hint="Password">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:ems="10"
            android:id="@+id/txtPassword"
            android:fontFamily="@font/semibold"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMasuk"
        android:background="@drawable/gradient_selector"
        android:layout_marginTop="20dp"
        android:text="Masuk Sekarang"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

    <LinearLayout
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/gray"
            android:fontFamily="@font/semibold"
            android:layout_marginEnd="8dp"
            android:text="Belum punya akun?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtDaftarAkun"
            android:fontFamily="@font/bold"
            android:textColor="@color/primary"
            android:text="Daftar Akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="70dp"
        android:background="@color/gray_100"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/semibold"
        android:textColor="@color/gray"
        android:layout_marginEnd="8dp"
        android:text="Atau masuk dengan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:weightSum="2"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_round"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="10dp"
                android:src="@drawable/icon_google"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:background="@drawable/button_round"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="10dp"
                android:src="@drawable/icon_teams"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>